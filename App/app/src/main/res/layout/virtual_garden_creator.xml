<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    android:baselineAligned="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <CheckBox
            android:id="@+id/veggie9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cabbage"
            tools:layout_editor_absoluteX="258dp"
            tools:layout_editor_absoluteY="341dp" />

        <CheckBox
            android:id="@+id/veggie8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Celery"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="341dp" />

        <CheckBox
            android:id="@+id/veggie7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Corn"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="341dp" />

        <CheckBox
            android:id="@+id/veggie6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zucchini"
            tools:layout_editor_absoluteX="258dp"
            tools:layout_editor_absoluteY="283dp" />

        <CheckBox
            android:id="@+id/veggie5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peppers"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="283dp" />

        <CheckBox
            android:id="@+id/veggie4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Broccoli"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="283dp" />

        <CheckBox
            android:id="@+id/veggie3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomatoes"
            tools:layout_editor_absoluteX="251dp"
            tools:layout_editor_absoluteY="220dp" />

        <CheckBox
            android:id="@+id/veggie2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Potatoes"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="220dp" />

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Virtual Garden Creator"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/backButtonVG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/divider"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/createVGButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Create"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/divider" />

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="729dp"
            android:background="?android:attr/listDivider"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="202dp"
            tools:layout_editor_absoluteY="1dp"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/step1Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:text="How many total plot areas are in your planters?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header" />

        <Spinner
            android:id="@+id/veggieTypesTotalSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/step1Text" />

        <TextView
            android:id="@+id/step2Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="What types of veggies will you have?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/veggieTypesTotalSelector" />

        <CheckBox
            android:id="@+id/veggie1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carrots"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="220dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>